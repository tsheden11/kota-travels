{%- macro button(text="", variant="primary", size="md", type="button", disabled=false, icon="", fullWidth=false, attrs="") -%}

<button
  type="{{ type }}"
  class="btn btn--{{ variant }} btn--{{ size }}{% if fullWidth %} btn--full{% endif %}"
  {% if disabled %}disabled{% endif %}
  {{ attrs | safe }}
>
  {% if icon %}
    <span class="btn__icon" aria-hidden="true">{{ icon | safe }}</span>
  {% endif %}
  <span class="btn__text">{{ text }}</span>
</button>

{%- endmacro -%}