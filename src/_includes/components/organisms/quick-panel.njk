{% from "components/atoms/button.njk" import button %}

{%- macro quickPanel(quickInfo={}, quickContact={}, contactCards="") -%}

<div class="quick-panel">

  {# Quick Info (left) #}
  <div class="quick-info">

    <h2 class="quick-panel__title">{{ quickInfo.title }}</h2>

    <div class="quick-info__rows">
      {% for row in quickInfo.rows %}
        <div class="quick-info__row">
          <span class="quick-info__label">{{ row.label }}</span>
          <span class="quick-info__value">{{ row.value }}</span>
        </div>
      {% endfor %}
    </div>

    {{ button(text=quickInfo.primaryBtn, variant="primary", size="lg", fullWidth=true) }}
    {{ button(text=quickInfo.secondaryBtn, variant="secondary", size="lg", fullWidth=true) }}

    {% if quickInfo.note %}
      <p class="quick-info__note">{{ quickInfo.note }}</p>
    {% endif %}

  </div>

  {# Quick Contact (right) #}
  <div class="quick-contact-wrapper">

    <div class="quick-contact">
      <div class="quick-contact__header">
        <h2 class="quick-panel__title">{{ quickContact.title }}</h2>
        {% if quickContact.subtitle %}
          <p class="quick-contact__subtitle">{{ quickContact.subtitle }}</p>
        {% endif %}
      </div>
      {{ button(text=quickContact.btnText, variant="secondary", size="lg", fullWidth=true) }}
    </div>

    {% if contactCards %}
      <div class="quick-contact__cards">
        {{ contactCards | safe }}
      </div>
    {% endif %}

  </div>

</div>

{%- endmacro -%}