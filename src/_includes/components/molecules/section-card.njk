{% from "components/atoms/button.njk" import button %}

{%- macro sectionCard(title="", description="", icon="", buttonText="", buttonHref="#") -%}

<div class="section-card">
  {% if icon %}
    <div class="section-card__icon-container" aria-hidden="true">{{ icon | safe }}</div>
  {% endif %}
  <h3 class="section-card__title">{{ title }}</h3>
  <p class="section-card__description">{{ description }}</p>
  {% if buttonText %}
    <a href="{{ buttonHref }}">
      {{ button(text=buttonText, variant="tertiary", size="md") }}
    </a>
  {% endif %}
</div>

{%- endmacro -%}