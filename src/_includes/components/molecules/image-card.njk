{% from "components/atoms/button.njk" import button %}

{%- macro imageCard(title="", description="", image="", imageAlt="", icon="", buttonText="Book Now", buttonHref="#") -%}

<div class="card-image">
  <div class="card-image__image-wrapper">
    <img class="card-image__image" src="{{ image }}" alt="{{ imageAlt }}" />
  </div>
  <div class="card-image__body">
    <div class="card-image__title-row">
      <h3 class="card-image__title">{{ title }}</h3>
      {% if icon %}
        <div class="card-image__icon-container" aria-hidden="true">{{ icon | safe }}</div>
      {% endif %}
    </div>
    <p class="card-image__description">{{ description }}</p>
    <div class="card-image__action">
      <a href="{{ buttonHref }}">
        {{ button(text=buttonText, variant="primary", size="md") }}
      </a>
    </div>
  </div>
</div>

{%- endmacro -%}