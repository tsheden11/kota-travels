{# Input component #}
{%- macro input(label='', name='', type='text', placeholder='') -%}
  <div class="form-group">
    {% if label %}<label for="{{ name }}">{{ label }}</label>{% endif %}
    <input type="{{ type }}" id="{{ name }}" name="{{ name }}" placeholder="{{ placeholder }}" />
  </div>
{%- endmacro -%}
