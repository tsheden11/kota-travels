{% set packageDetail = packageDetails[packageSlug] %}

<!-- Hero Section with Image Carousel -->
<!-- Hero Section with Image Carousel -->
<section class="relative bg-gray-900 overflow-hidden">

  <!-- Image Carousel -->
  <div class="relative h-96 md:h-[500px]">
    <!-- Images -->
    {% for image in packageDetail.images %}
    <div class="carousel-item absolute inset-0 transition-opacity duration-700 {% if loop.index0 == 0 %}opacity-100{% else %}opacity-0{% endif %}">
      <img src="{{ image }}" alt="{{ packageDetail.title }} - Image {{ loop.index }}" class="w-full h-full object-cover">
      <div class="absolute inset-0 bg-gradient-to-t from-black via-black/50 to-transparent"></div>
    </div>
    {% endfor %}

    <!-- Text Overlay -->
    <div class="absolute inset-0 flex items-center justify-center z-10">
      <div class="container-content text-center text-white">
        <h1 class="heading-display mb-4 drop-shadow-lg">{{ packageDetail.title }}</h1>
        <p class="text-xl md:text-2xl drop-shadow-lg">{{ packageDetail.tagline }}</p>
      </div>
    </div>

    <!-- Navigation Arrows -->
    <button onclick="changeSlide(-1)" class="carousel-btn absolute left-4 top-1/2 -translate-y-1/2 z-20 bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white p-3 rounded-full transition-all">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>

    <button onclick="changeSlide(1)" class="carousel-btn absolute right-4 top-1/2 -translate-y-1/2 z-20 bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white p-3 rounded-full transition-all">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>

    <!-- Dots Navigation -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-20 flex gap-2">
      {% for image in packageDetail.images %}
      <button onclick="goToSlide({{ loop.index0 }})" class="carousel-dot w-3 h-3 rounded-full bg-white/50 hover:bg-white transition-all {% if loop.index0 == 0 %}bg-white{% endif %}"></button>
      {% endfor %}
    </div>
  </div>

  <!-- Carousel Script -->
  <script>
    let currentSlide = 0;
    const slides = document.querySelectorAll('.carousel-item');
    const dots = document.querySelectorAll('.carousel-dot');
    const totalSlides = slides.length;

    function showSlide(index) {
      // Wrap around
      if (index >= totalSlides) currentSlide = 0;
      else if (index < 0) currentSlide = totalSlides - 1;
      else currentSlide = index;

      // Update slides
      slides.forEach((slide, i) => {
        slide.classList.toggle('opacity-100', i === currentSlide);
        slide.classList.toggle('opacity-0', i !== currentSlide);
      });

      // Update dots
      dots.forEach((dot, i) => {
        dot.classList.toggle('bg-white', i === currentSlide);
        dot.classList.toggle('bg-white/50', i !== currentSlide);
      });
    }

    function changeSlide(direction) {
      showSlide(currentSlide + direction);
    }

    function goToSlide(index) {
      showSlide(index);
    }

    // Auto-advance every 5 seconds
    let autoSlide = setInterval(() => changeSlide(1), 5000);

    // Pause auto-advance when user interacts
    document.querySelectorAll('.carousel-btn, .carousel-dot').forEach(btn => {
      btn.addEventListener('click', () => {
        clearInterval(autoSlide);
        autoSlide = setInterval(() => changeSlide(1), 5000);
      });
    });
  </script>

</section>

