                  {% endfor %}
               </ul>
            </div>
         </div>
      </div>
      <!-- RIGHT: Sidebar (1 column) -->
      <div class="lg:col-span-1">
         <div class="space-y-6">
            <!-- Quick Info Card -->
            <div class="card-base bg-gradient-to-br from-yellow-50 to-orange-50 border border-yellow-200 relative">
               <!-- Price Tag in Corner -->
               <div class="absolute -top-3 -right-3 bg-gradient-to-r from-orange-500 to-yellow-500 text-white rounded-full px-4 py-2 shadow-lg">
                  <div class="text-xs font-medium">From</div>
                  <div class="text-lg font-bold leading-none">{{ packageDetail.pricing.lowSeason }}</div>
               </div>
               <h3 class="heading-3 mb-4">Quick Info</h3>
               <div class="space-y-3">
                  <div class="flex items-start">
                     <svg class="w-5 h-5 text-yellow-600 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                     </svg>
                     <div>
