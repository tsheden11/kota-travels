                           {{ day.day }}
                        </div>
                     </div>
                     <div class="flex-1">
                        <h3 class="heading-4 mb-2">{{ day.title | replace("{", "<strong>") | replace("}", "</strong>") | safe }}</h3>
                        <p class="text-body mb-3">{{ day.description | replace("{", "<strong>") | replace("}", "</strong>") | safe }}</p>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-2 text-sm">
                           <div class="flex items-center text-body">
                              <svg class="w-6 h-6 mr-2 text-yellow-600" fill="currentColor" viewBox="0 0 24 24">
                                 <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zM9 7v3c0 .55.45 1 1 1v5h1v-5c.55 0 1-.45 1-1V7h-1v3h-1V7H9zm6 0c.55 0 1 .45 1 1v2c0 .55-.45 1-1 1v5h-1v-5c-.55 0-1-.45-1-1V8c0-.55.45-1 1-1h1z"/>
                              </svg>
                              {{ day.meals | replace("{", "<strong>") | replace("}", "</strong>") | safe }}
                           </div>
                           <div class="flex items-center text-body">
                              <svg class="w-4 h-4 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                              </svg>
                              {{ day.accommodation | replace("{", "<strong>") | replace("}", "</strong>") | safe }}
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
               {% endfor %}
            </div>
         </div>
         <!-- What's Included / Not Included -->
         <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="card-base bg-green-50 border border-green-200">
               <h3 class="heading-3 mb-4 text-green-900">What's Included</h3>
               <ul class="space-y-2">
                  {% for item in packageDetail.included %}
                  <li class="flex items-start text-body-dark">
                     <svg class="w-5 h-5 text-green-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                     </svg>
                     {{ item }}
                  </li>
                  {% endfor %}
               </ul>
            </div>
            <div class="card-base bg-red-50 border border-red-200">
               <h3 class="heading-3 mb-4 text-red-900">What's Not Included</h3>
               <ul class="space-y-2">
                  {% for item in packageDetail.notIncluded %}
