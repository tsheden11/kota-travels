  <div class="container mx-auto px-6 relative">
    <nav class="flex items-center justify-between py-4 relative">

      <!-- Logo -->
      <div class="flex items-center">
        <h1 class="text-2xl font-bold text-yellow-600">Kota Travels</h1>
      </div>

      <!-- Desktop Nav links (centered) -->
      <ul class="hidden md:flex space-x-8 absolute left-1/2 transform -translate-x-1/2">
        <li><a href="/" class="text-gray-700 hover:text-yellow-600 transition-colors duration-200 font-medium">Home</a></li>
        <li><a href="/packages/" class="text-gray-700 hover:text-yellow-600 transition-colors duration-200 font-medium">Packages</a></li>
        <li><a href="/about/" class="text-gray-700 hover:text-yellow-600 transition-colors duration-200 font-medium">About</a></li>
        <li><a href="/contact/" class="text-gray-700 hover:text-yellow-600 transition-colors duration-200 font-medium">Contact</a></li>
      </ul>

      <!-- Desktop Tagline -->
      <div class="flex items-center">
        <span class="ml-3 text-sm text-gray-600 hidden md:inline">Discover Bhutan</span>
      </div>

      <!-- Mobile Hamburger Button -->
      <button id="mobile-menu-button" class="md:hidden text-gray-700 hover:text-yellow-600 focus:outline-none z-50 relative" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
