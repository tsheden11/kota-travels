---
title: Our Packages
layout: base
---

<!-- Hero Section -->
<section class="section-hero">
  <div class="container-content text-center">
    <h1 class="heading-1 text-white mb-4">Our Packages</h1>
    <p class="text-xl text-blue-100 mx-auto">
      Discover Bhutan through authentic experiences crafted by our family for yours
    </p>
  </div>
</section>

<!-- Current Packages -->
<section class="section-white">
  <div class="container-content">
    <!-- Packages Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {% for package in packages %}
        {% include "components/card.njk" %}
      {% endfor %}
    </div>
  </div>
</section>

<!-- Custom Tours CTA -->
<section class="section-cta">
  <div class="container-content text-center">
    <h2 class="heading-2 text-white mb-4">Don't See What You're Looking For?</h2>
    <p class="text-xl mb-8 text-orange-100">Design a Bhutan experience that fits your pace, passions, and purpose.</p>
    <div class="space-y-4 md:space-y-0 md:space-x-4 md:flex md:justify-center">
      <button class="btn-white-orange open-trip-planner">
        Customize your tour
      </button>
    </div>
  </div>
</section>

<!-- Include Customize Form Modal -->
{% include "components/customizeForm.njk" %}