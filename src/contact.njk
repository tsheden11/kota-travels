---

{% from "components/atoms/input.njk" import input %}
{% from "components/atoms/dropdown.njk" import dropdown %}
{% from "components/atoms/button.njk" import button %}
{% from "components/molecules/horizontal-card.njk" import horizontalCard %}
{% from "components/organisms/cta-section.njk" import ctaSection %}

<div class="page-contact">

  {# ============================================================
     SECTION 1 - CONTACT FORM + GET IN TOUCH
  ============================================================ #}

  <section class="contact-section">
    <div class="contact-section__inner">

      {# Page title + subtitle #}
      <div class="contact-section__heading">
        <h1 class="contact-section__title">Contact Us</h1>
        <p class="contact-section__subtitle">We'll get back to you within 24 hours.</p>
      </div>

      {# Two column layout #}
      <div class="contact-section__row">

        {# LEFT - Contact Form #}
        <form
          class="contact-form"
          name="contact"
          method="POST"
          data-netlify="true"
          novalidate
        >
          <input type="hidden" name="form-name" value="contact" />

          {# Row 1 - Full Name + Email side by side #}
          <div class="contact-form__row">
            {{ input(name="name", label="Full Name", required=true, placeholder="Full Name") }}
            {{ input(name="email", label="Email", required=true, type="email", placeholder="Email") }}
          </div>

          {# Row 2 - Phone Number #}
          {{ input(name="phone", label="Phone Number", required=true, type="tel", placeholder="+00 000 000 0000") }}

          {# Row 3 - Message textarea #}
          {{ input(
            name="message",
            label="Questions, preferences, special requests - anything you'd like us to know.",
            required=true,
            type="textarea",
            placeholder="Places you'd love to visit, special occasions, trip length, accommodation preferences, accessibility or dietary needs, or anything else you'd like to share.",
            rows=8
          ) }}

          {# Row 4 - How did you hear about us #}
          {{ dropdown(
            name="referral",
            label="How did you hear about us?",
            required=true,
            options=[
              { value: "google",    label: "Google" },
              { value: "instagram", label: "Instagram" },
              { value: "facebook",  label: "Facebook" },
              { value: "friend",    label: "Friend or Family" },
              { value: "other",     label: "Other" }
            ]
          ) }}

          {# Submit button - full width #}
          {{ button(text="Submit", variant="primary", size="lg", type="submit", fullWidth=true) }}

        </form>

        {# RIGHT - Get In Touch cards #}
