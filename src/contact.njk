{# ============================================================
   FORM VALIDATION
============================================================ #}

<script>
  (function() {
    const form = document.querySelector('.contact-form');
    if (!form) return;

    form.addEventListener('submit', function(e) {
      e.preventDefault();

      let isValid = true;

      form.querySelectorAll('input[required], select[required], textarea[required]').forEach(function(field) {
        const wrapper = field.closest('.input-field, .dropdown-field');
        if (!field.value.trim()) {
          isValid = false;
          wrapper?.classList.add('input-field--error');
        } else {
          wrapper?.classList.remove('input-field--error');
        }
      });

      if (isValid) form.submit();
    });

    form.querySelectorAll('input, select, textarea').forEach(function(field) {
      field.addEventListener('input', function() {
        field.closest('.input-field, .dropdown-field')
          ?.classList.remove('input-field--error');
      });
    });
  })();
</script>