{% extends 'base.njk' %}

{% block hero %}
<section class="hero">
  <div class="container">
    <h1>Welcome to Kota Travels</h1>
    <p>Discover your next adventure with us!</p>
    <a href="#features" class="btn btn-primary">Explore Now</a>
  </div>
</section>
{% endblock %}

{% block features %}
<section id="features" class="features">
  <div class="container">
    <h2>Our Features</h2>
    <div class="feature-cards">
      <div class="card">
        <h3>Easy Booking</h3>
        <p>Book your travels in just a few clicks!</p>
      </div>
      <div class="card">
        <h3>24/7 Support</h3>
        <p>We're here to help you anytime, anywhere.</p>
      </div>
      <div class="card">
        <h3>Custom Packages</h3>
        <p>Tailor your travel experience just for you.</p>
      </div>
    </div>
  </div>
</section>
{% endblock %}

{% block benefits %}
<section class="benefits">
  <div class="container">
    <h2>Why Choose Us?</h2>
    <div class="benefit-cards">
      <div class="card benefit-card">
        <h3>Affordable Rates</h3>
        <p>We offer competitive pricing for all travelers.</p>
      </div>
      <div class="card benefit-card">
        <h3>Quality Service</h3>
        <p>Your satisfaction is our top priority.</p>
      </div>
      <div class="card benefit-card">
        <h3>Eco-Friendly</h3>
        <p>We care about the planet and your footprint.</p>
      </div>
    </div>
  </div>
</section>
{% endblock %}

{% block footer %}
<footer>
  <div class="container">
    <p>&copy; 2026 Kota Travels. All rights reserved.</p>
    <p>Follow us on social media!</p>
  </div>
</footer>
{% endblock %}

{% import 'components/button.njk' as Button %}
{% import 'components/card.njk' as Card %}
{% import 'components/badge.njk' as Badge %}